root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.json]
indent_size = 2

[**.html]
indent_size = 2

[**.css]
indent_size = 2

[**.js]
indent_size = 2

[**.purs]
indent_size = 2

[**.py]
indent_size = 4

[Makefile]
indent_style = tabs
